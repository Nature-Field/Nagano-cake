<h2>ジャンル一覧・追加</h2>

<%= form_with model: @genre,url: admin_genres_path, local:true do |f| %>
  <div class="form-group">ジャンル名
    <%= f.text_field :name %>
  </div>
  <%= f.submit "新規登録" %>
<% end %>

<table>
  <thead><th>ジャンル</th></thead>
  <tbody>
    <% @genres.each do |genre| %>
      <td><%= genre.name%></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
    <% end %>
  </tbody>
</table>