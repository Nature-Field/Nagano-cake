<div class="container">
  <div class="row">
    <h4 class="theme">会員一覧</h4>
    <table class="table">
      <thead class="thead-light">
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <td><%= customer.id %></td>
          <td><%= link_to customer.fullname, admin_customer_path(customer) %></td>
          <td><%= customer.email %></td>
          <td><%= customer.is_deleted ? "退会" : "有効" %></td>
        <% end %>
        <%= paginate @customers %>
      </tbody>
    </table>
  </div>
</div>