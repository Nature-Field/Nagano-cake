<h2>search for "<%= @search_word %>"</h2><br>
<% if admin_signed_in? %>
  <table>
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @records.each do |p| %>
      <tr>
        <th><%= p.id %></th>
        <th><%= link_to admin_product_path(p) do p.name end %></th>
        <th><%= p.price %></th>
        <th><%= p.genre.name %></th>
        <th><%= p.is_active ? "販売中" : "販売停止中" %></th>
      </tr>
      <% end %>
    </tbody>
  </table>

<% else %>
   <div class="row offset-3" style="width: 100%;">
      <% @records.each do |product| %>
        <div class="col-md-3 mb-5">
          <div class="card">
            <%= attachment_image_tag product, :image, format: 'jpeg', fallback: "no_image.jpg", height:150 %>
            <p class= "mt-3"><%= link_to product.name, product_path(product.id) %></p>
            <% if product.is_active == false %>
              <p class="text-danger">売り切れ</p>
            <% else %>
              <p>￥<%= product.price %></p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
<% end %>