<%= attachment_image_tag(@product, :image, :fill, 50, 50) %>
<%= @product.name %>
<%= @product.explanation %>
<%= @product.price %>（税込）

<%= form_with model: @cart_product,local:true do |f| %>
  <%= f.select :quantity, [1, 2, 3, 4, 5, 6, 7, 8, 9], {include_blank: '個数選択'} %>
  <%= f.hidden_field :customer_id, :value => current_customer.id %>
  <%= f.hidden_field :product_id, :value => @product.id %>
  <% link_to cart_products_path do %>
    <%= f.submit "カートに入れる" %>
  <% end %>
<% end %>