<div class="container mt-5">
  <div class="row">

    <div class="col-md-2" style="background-color: orange">
      <h3>ジャンル検索</h3>
    </div>

    <div class="col-md-8 offset-1">
      <div>
        <h1>商品一覧<font size="5">（全<%= @products_all.count %>件）</font></h1>
      </div>
    </div>

    <div class="row offset-3" style="width: 100%;">
      <% @products.each do |product| %>
        <div class="col-md-3 mb-5">
          <div class="card">
            <%= attachment_image_tag product, :image, format: 'jpeg', fallback: "no_image.jpg", height:150 %>
            <p class= "mt-3"><%= link_to product.name, product_path(product.id) %></p>
            <p>￥<%= (product.price*1.1).floor %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row offset-6 mb-3">
    <font size="5"><%= paginate @products %></font>
  </div>

</div>


