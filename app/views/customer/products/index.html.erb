<h1>商品一覧（全<%= @products.count %>件）</h1>
<div>
  <% @products.each do |product| %>
    <%= link_to product_path(product) do %>
      <%= attachment_image_tag product, :image, :fill, 50, 50, size: "100x100" %>
    <% end %>
    <p><%= product.name %></p>
    <p><%= product.price %></p>
  <% end %>
</div>

<%= paginate @products %>