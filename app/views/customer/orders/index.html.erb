<h1>注文履歴一覧</h1>



<table class="table table-bordered">
  <thead>
    <tr>
      <td>注文日</td>
      <td>配送先</td>
      <td>注文商品</td>
      <td>支払金額</td>
      <td>ステータス</td>
      <td>注文詳細</td>
    </tr>
  </thead>
  <tbody>
  <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= order.postal_code %></br><%= order.address %></br><%= order.name%></td>
      <td><% order.products.each do |product|%>
          <%= product.name %><br>
          <% end %>
      </td>
      <td><%= order.total_price.to_s(:delimited) %>円</td>
      <td><%= order.status %></td>
      <td><%= link_to "表示する", order_path(order), class: "btn btn-primary" %></td>
    </tr>
  <% end %>
  </tbody>
</table>