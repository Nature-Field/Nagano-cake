<div class="container mt-5 mb-5">
  <h1>注文履歴詳細</h1>

  <p>注文情報</p>
    <table class="table table-bordered">
      <tbody>
        <tr>
          <td>注文日</td>
          <td><%= @order.created_at %></td>
        </tr>
        <tr>
          <td>配送先</td>
          <td><%= @order.postal_code %></br>
              <%= @order.address %></br>
              <%= @order.name %>
          </td>
        </tr>
        <tr>
          <td>支払方法</td>
          <td><%= @order.payment_way %></td>
        </tr>
        <tr>
          <td>ステータス</td>
          <td><%= @order.status %></td>
        </tr>
      </tbody>
    </table>

    <p>請求情報</p>
    <table class="table table-bordered">
      <tbody>
        <tr>
          <td>商品合計</td>
          <td><%= @order_products_price %></td>
        </tr>
        <tr>
          <td>配送料</td>
          <td><%= @order.cost %></td>
        </tr>
        <tr>
          <td>ご請求金額</td>
          <td><%= @order.total_price.to_s(:delimited) %></td>
        </tr>
      </tbody>
    </table>

    <p>注文内容</p>
    <table class="table table-bordered">
      <thead>
        <tr>
          <td>商品</td>
          <td>単価（税込み）</td>
          <td>個数</td>
          <td>小計</td>
        </tr>
      </thead>
      <tbody>
        <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.product.name %></td>
            <td><%= order_detail.product.price %></td>
            <td><%= order_detail.quantity %></td>
            <td><%= (order_detail.quantity * order_detail.product.price).to_s(:delimited) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>


</div>
