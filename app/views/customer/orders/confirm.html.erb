<div class="container mt-4">
  <h3>注文情報確認</h3>
  <div class="row">
    <div class="col-8">
    <table class="table table-bordered">
      <thead>
        <tr>
          <td>商品名</td>
          <td>単価</td>
          <td>数量</td>
          <td>小計</td>
        </tr>
      </thead>
      <tbody>
        <% @cart_products.each do |cart| %>
          <tr>
            <td class="font-weight-bold"><%= attachment_image_tag(cart.product, :image, :fill, 50, 50 , size: "60x60") %>
                <%= cart.product.name %></td> <!-- 商品名 -->
            <td><%= ((cart.product.price*1.1).floor).to_s(:delimited) %></td>　<!-- 金額 -->
            <td><%= cart.quantity %></td> <!-- 個数 -->
            <td><%= ((cart.product.price*1.1 *cart.quantity).floor).to_s(:delimited) %></td> <!-- 小計 -->
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    <div class="col-3 offset-1">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <td>送料</td>
          <td><%= @order.cost.to_s(:delimited) %></td>
        </tr>
        <tr>
          <td>商品合計</td>
          <td><%= @total.to_s(:delimited) %></td> <!-- 商品の合計金額 -->
        </tr>
        <tr>
          <td><p>ご請求金額</p></td>
          <td><%= @order.total_price.to_s(:delimited) %></td> <!-- 商品合計+送料 -->
        </tr>
      </tbody>
    </table>
    </div>
  </div>

   <div class="row">
     <p class="col-lg-1 align-self-start">支払方法</p>
     <div class="col-lg-10 align-self-center"><%= @order.payment_way_i18n %></div>
   </div>
   <div class="row">
      <p class="col-lg-1 align-self-start ">お届け先</p>
      <div class="col-lg-10 align-self-center"><%= @order.address %></div>
    </div>

      <!-- ユーザーには注文確定ボタンだけ表示します -->
      <div class="row justify-content-center">
      <%= form_with model: @order, url: { action: :create }, local: true do |f| %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :address %>
        <%= f.hidden_field :postal_code %>
        <%= f.hidden_field :total_price, value: @total %>
        <%= f.hidden_field :cost, value: @order.cost %>
        <%= f.submit "注文を確定する", class: "btn btn-success" %>
      <% end %>
      </div>
</div>