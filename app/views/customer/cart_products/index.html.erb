<h2>ショッピングカート</h2>
<table>
  <tr>
    <td>商品名</td>
    <td>単価（税込）</td>
    <td>数量</td>
    <td>小計</td>
    <td></td>
  </tr>
  <% @cart_products.each do |product| %>
  <tr>
    <td><%= attachment_image_tag(product.product, :image, :fill, 50, 50 , size: "60x60") %>
        <%= product.product.name %></td>
    <td><%= product.product.price %></td>
    <td><%= product.quantity %>個</td>
    <td></td>
    <td><%= link_to "削除する", cart_product_path(product), method: :delete %></td>
  </tr>
  <% end %>

</table>
